        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" disabled />
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" disabled />
        <label asp-for="Url" class="form-label">Url</label>
        <input asp-for="Url" class="form-control" disabled />
        <label asp-for="ProgressMarker" class="form-label">Progress Marker</label>
