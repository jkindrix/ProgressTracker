@model IEnumerable<ItemViewModel>

@section Styles {
    <style>
        .td-break {
            word-break: break-all;
        }

        .td-no-wrap {
            white-space: nowrap;
        }
    </style>
}

<h1>Items</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Url</th>
            <th scope="col">ProgressMarker</th>
            <th scope="col">GoalMarker</th>
            <th scope="col">Metric</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row" class="">@item.Name</th>
                <td class="">@item.Description</td>
                <td class="td-break"><a href="@item.Url">@item.Url</a></td>
                <td class="">@item.ProgressMarker</td>
                <td class="">@item.GoalMarker</td>
                <td class="">@item.MetricName</td>
                <td class=""><a asp-action="Edit" asp-controller="Items" asp-route-id="@item.Id">Edit</a></td>
                <td class="td-no-break"><a asp-action="Delete" asp-controller="Items" asp-route-id="@item.Id">Delete Item</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Items">Create New Item</a>

