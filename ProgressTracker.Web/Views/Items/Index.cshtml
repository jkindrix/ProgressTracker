@model IEnumerable<ItemViewModel>

<h1>Here are all the current Items</h1>

<table class="table table-striped .table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Url</th>
            <th scope="col">ProgressMarker</th>
            <th scope="col">GoalMarker</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Url</td>
                <td>@item.ProgressMarker</td>
                <td>@item.GoalMarker</td>
                <td><a asp-action="Edit" asp-controller="Items" asp-route-id="@item.Id">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="Items" asp-route-id="@item.Id">Delete Item</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Items">Create New Item</a>
